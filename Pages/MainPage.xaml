<Page x:Class="PodkopaevApp.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PodkopaevApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Rectangle Fill="#00A4C8"/>
        <TextBlock x:Name="mainTB" Text="Авторизация" Style="{DynamicResource TextBlockStyle}"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <Button x:Name="PatientLoginBtn" Click="PatientLoginBtn_Click" Content="вход для пациентов" Style="{DynamicResource ButtonStyle}"/>
            <Button x:Name="StaffLoginBtn" Click="StaffLoginBtn_Click" Content="вход для сотрудников" Style="{DynamicResource ButtonStyle}"/>
        </StackPanel>
    </Grid>
</Page>
